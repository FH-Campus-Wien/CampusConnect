<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToWidth="true" prefHeight="800.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/11.0.1">
    <content>
        <VBox alignment="TOP_CENTER" spacing="12.0" styleClass="profile-setup-container">
            <Text styleClass="title" text="Create Your Profile"/>

            <GridPane hgap="16" vgap="14" maxWidth="720">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <!-- Photos -->
                <Label text="Photos" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button fx:id="photoUploadButton" text="Add Photo" styleClass="photo-button" GridPane.columnIndex="0"
                        GridPane.rowIndex="1"/>

                <!-- First row: First, Last, Birthdate (birth spans both columns) -->
                <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label text="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <TextField fx:id="firstNameField" styleClass="input-field" GridPane.columnIndex="0"
                           GridPane.rowIndex="3"/>
                <TextField fx:id="lastNameField" styleClass="input-field" GridPane.columnIndex="1"
                           GridPane.rowIndex="3"/>

                <Label text="Birthdate" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="birthdateField" promptText="YYYY-MM-DD" styleClass="input-field"
                           GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>

                <!-- Gender / Pronouns -->
                <Label text="Gender" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <Label text="Pronouns" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <TextField fx:id="genderField" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="pronounsField" styleClass="input-field" GridPane.columnIndex="1"
                           GridPane.rowIndex="7"/>

                <!-- Degree / Semester -->
                <Label text="Degree Type" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <Label text="Semester" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <TextField fx:id="degreeTypeField" promptText="e.g. BSc, MSc" styleClass="input-field"
                           GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <TextField fx:id="semesterField" styleClass="input-field" GridPane.columnIndex="1"
                           GridPane.rowIndex="9"/>

                <!-- Study Program (full width) -->
                <Label text="Study Program" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                <TextField fx:id="studyProgramField" styleClass="input-field full" GridPane.columnIndex="0"
                           GridPane.rowIndex="11" GridPane.columnSpan="2"/>

                <!-- Looking For / Interested In -->
                <Label text="Looking For" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
                <Label text="Interested In" GridPane.columnIndex="1" GridPane.rowIndex="12"/>

                <TextField fx:id="lookingForField" styleClass="input-field" GridPane.columnIndex="0"
                           GridPane.rowIndex="13"/>
                <TextField fx:id="interestedInField" styleClass="input-field" GridPane.columnIndex="1"
                           GridPane.rowIndex="13"/>

                <!-- Bio (full width) -->
                <Label text="Bio" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
                <TextArea fx:id="bioField" styleClass="textarea-field" GridPane.columnIndex="0" GridPane.rowIndex="15"
                          GridPane.columnSpan="2"/>

                <!-- Interests section (full width) -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="16" GridPane.columnSpan="2" spacing="10">
                    <children>
                        <Label text="Interests"/>

                        <Label text="Academic"/>
                        <FlowPane fx:id="academicFlow" hgap="10" vgap="10">
                            <children>
                                <ToggleButton fx:id="tutoringBtn" text="Tutoring" styleClass="chip"/>
                                <ToggleButton fx:id="studyGroupBtn" text="Study Group" styleClass="chip"/>
                                <ToggleButton fx:id="researchBtn" text="Research" styleClass="chip"/>
                            </children>
                        </FlowPane>

                        <Label text="Technology"/>
                        <FlowPane fx:id="technologyFlow" hgap="10" vgap="10">
                            <children>
                                <ToggleButton fx:id="codingBtn" text="Coding" styleClass="chip"/>
                                <ToggleButton fx:id="aiBtn" text="AI" styleClass="chip"/>
                                <ToggleButton fx:id="designBtn" text="Design" styleClass="chip"/>
                            </children>
                        </FlowPane>
                    </children>
                </VBox>

                <!-- Save button full width centered -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="17" GridPane.columnSpan="2" spacing="8"
                      alignment="CENTER">
                    <Button fx:id="saveButton" text="Save Profile" styleClass="primary-button"/>
                </VBox>

            </GridPane>
        </VBox>
    </content>
</ScrollPane>