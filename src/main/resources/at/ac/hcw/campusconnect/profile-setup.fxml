<?xml version="1.0" encoding="UTF-8"?>
<?import at.ac.hcw.campusconnect.components.AutoCompleteTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToWidth="true" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="at.ac.hcw.campusconnect.controller.ProfileSetupController">
    <content>
        <VBox alignment="TOP_CENTER" styleClass="profile-setup-container">
            <Text styleClass="title" text="Create Your Profile"/>

            <VBox maxWidth="700.0" spacing="30.0" styleClass="profile-form">
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
                </padding>
                <!-- Images Section -->
                <VBox>
                    <Label styleClass="section-header" text="Photos"/>
                    <FlowPane fx:id="imageContainer" hgap="10.0" vgap="10.0"/>
                    <Button fx:id="addImageButton" styleClass="secondary-button"
                            text="Add Photos"/>
                </VBox>

                <!-- Basic Info -->
                <HBox spacing="20.0">
                    <VBox HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="First Name"/>
                            <TextField fx:id="firstNameField" maxWidth="Infinity"
                                       styleClass="form-text-field"/>
                        </children>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Last Name"/>
                            <TextField fx:id="lastNameField" maxWidth="Infinity"
                                       styleClass="form-text-field"/>
                        </children>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity">
                        <children>
                            <Label text="Birthdate"/>
                            <DatePicker fx:id="birthdatePicker" styleClass="form-date-picker"/>
                        </children>
                    </VBox>
                </HBox>
                <HBox spacing="20.0">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Gender"/>
                        <ComboBox fx:id="genderComboBox" maxWidth="Infinity"
                                  styleClass="form-combo-box"/>
                    </VBox>

                    <VBox HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Pronouns"/>
                            <ComboBox fx:id="pronounsComboBox" maxWidth="Infinity"
                                      styleClass="form-combo-box"/>
                        </children>
                    </VBox>

                </HBox>

                <HBox spacing="20.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Degree Type"/>
                                <ComboBox fx:id="degreeTypeComboBox" maxWidth="Infinity"
                                          styleClass="form-combo-box"/>
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Semester"/>
                                <ComboBox fx:id="semesterComboBox" maxWidth="Infinity"
                                          styleClass="form-combo-box" disable="true"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Study Program -->
                <VBox>
                    <children>
                        <Label text="Study Program"/>
                        <AutoCompleteTextField fx:id="studyProgramField" maxWidth="Infinity"
                                               styleClass="auto-complete-field"
                                               promptText="Search and select your study program..."
                                               disable="true"/>

                    </children>
                </VBox>

                <!-- Preferences -->
                <HBox spacing="20.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Looking For"/>
                                <ComboBox fx:id="lookingForComboBox" maxWidth="Infinity"
                                          styleClass="form-combo-box"/>
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Interested In"/>
                                <ComboBox fx:id="interestedInComboBox" maxWidth="Infinity"
                                          styleClass="form-combo-box"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Bio -->
                <VBox>
                    <children>
                        <Label text="Bio"/>
                        <TextArea fx:id="aboutMeArea" prefRowCount="4"
                                  promptText="Tell others more about yourself..."
                                  styleClass="form-text-area"/>
                    </children>
                </VBox>

                <!-- Interests -->
                <VBox>
                    <children>
                        <Label styleClass="section-header" text="Interests"/>

                        <!-- Academic Interests -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Academic" styleClass="interest-category-label"/>
                                <FlowPane fx:id="academicInterestsPane" hgap="10.0" vgap="10.0"/>
                            </children>
                        </VBox>

                        <!-- Sports & Fitness -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Sports &amp; Fitness" styleClass="interest-category-label"/>
                                <FlowPane fx:id="sportsInterestsPane" hgap="10.0" vgap="10.0"/>
                            </children>
                        </VBox>

                        <!-- Hobbies & Creative -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Hobbies &amp; Creative" styleClass="interest-category-label"/>
                                <FlowPane fx:id="hobbiesInterestsPane" hgap="10.0" vgap="10.0"/>
                            </children>
                        </VBox>

                        <!-- Social & Entertainment -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Social &amp; Entertainment" styleClass="interest-category-label"/>
                                <FlowPane fx:id="socialInterestsPane" hgap="10.0" vgap="10.0"/>
                            </children>
                        </VBox>

                        <!-- Technology & Gaming -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Technology" styleClass="interest-category-label"/>
                                <FlowPane fx:id="techInterestsPane" hgap="10.0" vgap="10.0"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <Button fx:id="saveButton" onAction="#handleSaveProfile"
                        styleClass="primary-button"
                        text="Save Profile" maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </content>
</ScrollPane>