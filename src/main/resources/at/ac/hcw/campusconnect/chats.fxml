<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import at.ac.hcw.campusconnect.components.ErrorBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="at.ac.hcw.campusconnect.controller.ChatsController"
           styleClass="chats-container">

    <!-- Error Box -->
    <ErrorBox fx:id="errorBox" StackPane.alignment="TOP_CENTER">
        <StackPane.margin>
            <Insets top="20"/>
        </StackPane.margin>
    </ErrorBox>

    <HBox spacing="0" styleClass="chats-content">
        <!-- Chat List -->
        <VBox styleClass="chat-list-panel" prefWidth="350" spacing="0">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets top="10" bottom="20" left="20" right="20"/>
                </padding>
                <Label text="Messages" styleClass="page-title"/>
            </HBox>

            <!-- Chat List -->
            <ScrollPane fitToWidth="true" styleClass="chat-list-scroll">
                <VBox fx:id="chatList" spacing="0"/>
            </ScrollPane>

            <!-- Empty State for Chat List -->
            <VBox fx:id="chatListEmptyState" alignment="CENTER" spacing="15" visible="false">
                <padding>
                    <Insets top="50" bottom="50"/>
                </padding>
                <Label text="No chats yet" styleClass="empty-title"/>
                <Label text="Start chatting with your matches!" styleClass="empty-subtitle"/>
            </VBox>
        </VBox>

        <!-- Chat Area -->
        <VBox fx:id="chatArea" styleClass="chat-area" HBox.hgrow="ALWAYS" spacing="0">
            <!-- Chat Header -->
            <HBox fx:id="chatHeader" alignment="CENTER_LEFT" spacing="15" styleClass="chat-header">
                <padding>
                    <Insets top="15" bottom="15" left="20" right="20"/>
                </padding>
                <StackPane fx:id="chatAvatar" styleClass="profile-avatar-small" prefWidth="45" prefHeight="45"/>
                <VBox spacing="2">
                    <Label fx:id="chatUserName" text="Select a chat" styleClass="chat-user-name"/>
                    <Label fx:id="chatUserInfo" text="" styleClass="chat-user-info"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- Messages Area -->
            <ScrollPane fx:id="messagesScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="messages-scroll">
                <VBox fx:id="messagesContainer" spacing="10" styleClass="messages-container">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                </VBox>
            </ScrollPane>

            <!-- Message Input -->
            <HBox alignment="CENTER" spacing="10" styleClass="message-input-container">
                <padding>
                    <Insets top="10" bottom="10" left="20" right="20"/>
                </padding>
                <TextField fx:id="messageInput" promptText="Type a message..." styleClass="message-input" HBox.hgrow="ALWAYS" onAction="#handleSendMessage"/>
                <Button fx:id="sendButton" styleClass="send-button" onAction="#handleSendMessage">
                    <graphic>
                        <SVGPath content="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" styleClass="send-icon"/>
                    </graphic>
                </Button>
            </HBox>

            <!-- Empty Chat State -->
            <VBox fx:id="emptyChatState" alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="50" bottom="50"/>
                </padding>
                <SVGPath content="M20 2H4c-1.1 0-1.99.9-1.99 2L2 22l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 9h12v2H6V9zm8 5H6v-2h8v2zm4-6H6V6h12v2z" 
                         styleClass="empty-icon" scaleX="3" scaleY="3"/>
                <Label text="Select a chat to start messaging" styleClass="empty-title"/>
            </VBox>
        </VBox>
    </HBox>
</StackPane>
